{
  "name": "@basalt-lab/basalt-core",
  "version": "1.0.0",
  "description": "Core of Basalt Framework",
  "main": "Build/App.js.js",
  "types": "Build/App.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "fix-lint": "eslint --fix . --ext .ts",
    "check-types": "tsc --noEmit",
    "create-types": "tsc --emitDeclarationOnly",
    "dev": "ESBUILD_ENV=dev node esbuild.config.js & node wait-and-watch.js",
    "build::pkg": "npm run check-types && npm run create-types && ESBUILD_ENV=prod node esbuild.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Basalt-Lab/basalt-core.git"
  },
  "keywords": [
    "basalt-core"
  ],
  "author": "Ruby",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Basalt-Lab/basalt-core/issues"
  },
  "homepage": "https://github.com/Basalt-Lab/basalt-core#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "esbuild": "^0.19.4",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^8.50.0",
    "typescript": "^5.2.2"
  }
}
